#include"lpc214x.h"
#define LCD_PORT 0x00FF0000
#define EN 1<<31
#define RS 1<<27
#define CS1 1<<26
#define CS2 1<<25
#define GRST 1<<30
#define RW 1<<24
#define LCD_SHIFT 16
void delay(unsigned int time) //small delay
{
int i,j;
for(i=0;i<time;i++)
for(j=0;j<10;j++);
}

void ldelay(unsigned int time) //long delay
{
int i,j;
for(i=0;i<time;i++)
for(j=0;j<5000;j++);
}
void LCD_strobe(void) //generate ENABLE pulse
{
IO1SET = EN;
delay(5);
IO1CLR = EN;
delay(5);
}
void GLCD_data(unsigned char ch)
{
IO1CLR = LCD_PORT;
IO1SET = ch<<LCD_SHIFT;
IO1SET = RS;
LCD_strobe();
}

void GLCD_cmd(unsigned char ch)
{
IO1CLR = LCD_PORT;
IO1SET = ch<<LCD_SHIFT;
IO1CLR = RS;
LCD_strobe();
}
void GLCD_init()
{
int i;
PINSEL0 = 0; //set pins as GPIO
PINSEL1 = 0;
PINSEL2 = 0;
IODIR1 = LCD_PORT | RS | EN | CS1 | CS2 | GRST | RW; //set pins as output
IOSET1 = GRST | CS1 | CS2;
IOCLR1 = RW | RS | EN;
for(i=0;i<10;i++)
GLCD_cmd(0x3F); //Display ON
GLCD_cmd(0x40); //Set Y address as 0 (range 0-63)
GLCD_cmd(0xB8); //Set X address as 0 (page address) (range 0-7)
}
void GLCD_clear()
{
int page, col;
for (page = 0; page < 8; page++)
{
GLCD_cmd(0xB8 | page); // Set page address
GLCD_cmd(0x40); // Set Y address to 0
for (col = 0; col < 64; col++)
{
GLCD_data(0x00); // Clear all columns
}
}
}
void GLCD_disp1() //display routine
{
int page,col;
IO1SET = CS1;
IO1CLR = CS2;
for(page=1; page<7;page++)
{

if(page == 1 || page==6)
{
// for (page = 1; page < 7; page++) {
GLCD_cmd(0xB8 | page);
for (col = 8; col < 57; col++) {
GLCD_cmd(0x40 | col);
GLCD_data(0xFF);
}
}
else
{
GLCD_cmd(0xB8 | page);
for (col = 28; col < 37; col++) {
GLCD_cmd(0x40 | col);
GLCD_data(0xFF);

}
}

}
}
int main()
{
GLCD_init();
GLCD_clear();
GLCD_disp1();
delay(100);
while(1);
